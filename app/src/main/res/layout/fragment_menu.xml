<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".screens.menu.MenuFragment">


    <data>

        <variable
            name="menuViewModel"
            type="com.myniprojects.viruskiller.screens.menu.MenuViewModel" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat

        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_list"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:fontFamily="@font/audiowide"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/anteroom"
            android:textColor="@color/color_head"
            app:autoSizeTextType="uniform" />

        <ImageView
            android:id="@+id/imgLaboratory"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:contentDescription="@string/laboratory"
            android:padding="5dp"
            android:src="@drawable/laboratory" />

        <TextView
            android:id="@+id/txtLaboratory"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#0000838F"
            android:fontFamily="@font/audiowide"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:text="@string/laboratory"
            android:textColor="@color/color_desc"
            app:autoSizeTextType="uniform" />

        <ImageView

            android:id="@+id/imgHelp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:contentDescription="@string/help"
            android:padding="5dp"
            android:src="@drawable/information" />

        <TextView
            android:id="@+id/txtHelp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#0000838F"
            android:fontFamily="@font/audiowide"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:text="@string/help"
            android:textColor="@color/color_desc"
            app:autoSizeTextType="uniform" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</layout>